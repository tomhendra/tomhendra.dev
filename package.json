{
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "bun validate && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "bun lint --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|md)\"",
    "format:fix": "bun format --write \"**/*.+(js|jsx|ts|tsx|md)\"",
    "format:check": "bun format --list-different",
    "validate": "bun run \"/^(lint|format:check)$/\"",
    "postinstall": "bun husky",
    "clean:node_modules": "rm -rf node_modules"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.+(json|md|mdx)": [
      "prettier --write"
    ],
    "*": [
      "secretlint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "secretlint": "^11.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12"
  }
}
