{
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "bun validate && vite build",
    "preview": "vite preview",
    "dev:cf": "wrangler dev",
    "deploy": "wrangler deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|md)\"",
    "format:fix": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|md)\" --write",
    "format:check": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|md)\" --list-different",
    "validate": "bun lint && bun format:check",
    "postinstall": "bun husky",
    "clean:node_modules": "rm -rf node_modules"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.+(json|md|mdx)": [
      "prettier --write"
    ],
    "*": [
      "secretlint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "secretlint": "^11.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "wrangler": "^4.54.0"
  }
}
